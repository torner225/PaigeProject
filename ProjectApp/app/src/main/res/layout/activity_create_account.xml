<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft ="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="To create an account, please enter your school email and create a username and password." />

        <EditText
            android:id="@+id/newEmailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:inputType="text"
            android:maxLines="1"
            android:lines="1"
            android:textSize="20sp"
            android:hint="School Email"/>

        <EditText
            android:id="@+id/newUsernameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:inputType="text"
            android:maxLines="1"
            android:lines="1"
            android:textSize="20sp"
            android:hint="Username"/>

        <EditText
            android:id="@+id/newPasswordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:textSize="20sp"
            android:hint="Password"/>

        <Button
            android:id="@+id/createNewAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="onSubmitNewAccountButtonClick"/>

        <TextView
            android:id="@+id/statusPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft ="@dimen/warning_margin"
            android:layout_marginRight="@dimen/warning_margin"
            android:text=""
            android:textColor="#FF5722"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>